<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arima:wght@100..700&family=Lilita+One&family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Rubik+Wet+Paint&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: "Playfair Display", serif; 
            background-color: black;
            color: #333;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        h1 {
            margin-bottom: 20px;
            color: #4CAF50;
        }
        .btn-signup {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-bottom: 20px;
            cursor: pointer;
            border-radius: 5px;
        }
        .btn-signup:hover {
            background-color: black;
        }
        table {
            width: 100%;
            color: black;
            max-width: 800px;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: black;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 12px;
        }
        th {
            background-color: darkgreen;
            color: white;
        }
        tr:nth-child(even) {
            background-color: black;
        }
        .btn-update, .btn-delete {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
        }
        .btn-update:hover, .btn-delete:hover {
            background-color: black;
        }
        .button-container {
            display: flex;
            margin: 10px 0;
        }
        .logout-button {
            background-color: darkgreen;
            color: white;
            border: none;
            padding: 8px 16px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .logout-button:hover {
            background-color: black;
        }
        .username-cell, .email-cell {
            color: white;
            font-weight: bolder;
        }
    </style>
</head>
<body>
    <div class="button-container" style="display: flex; margin-left: 10px 0;">
        <a href="/admin/logout"><button class="logout-button">Logout</button></a>
    </div>
    <h1>User Details</h1>
    
    <!-- Updated href to point to the correct add user page -->
    <a href="/admin/add-user"><button class="btn-signup">Add User</button></a>

    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% userDetails.forEach(user => { %>
                <tr>
                    <td class="username-cell"><%= user.username %></td>
                    <td class="email-cell"><%= user.email %></td>
                    <td>
                        <a href="/admin/userEdit/<%= user._id %>">
                            <button class="btn-update">Update</button>
                        </a>
                    </td>
                    <td>
                        <a href="/admin/deleteUser/<%= user._id %>">
                            <button class="btn-delete">Delete</button>
                        </a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
